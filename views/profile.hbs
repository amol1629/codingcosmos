<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link rel="stylesheet" href="/static/css/style.css">

    <style>
        body {
            background-image: url("/static/images/bg-18.png");
            background-attachment: fixed;
        }
    </style>

    <title>Profile</title>
</head>

<body>

    {{> navbar data=details}}

    <section class="about-us-section py-5 my-5 ">
        <div class="container">
            <div class="row">

                <div class="col-md-6 align-self-center">
                    <div class="container-fluid my-5 ">
                        <div class="my-5 py-5  text-white align-self-center w-100 align-self-center">
                            <div class="row justify-content-center">
                                <div class="col ">

                                    <h2 class="text-center">{{signups.name}}</h2>
                                    <form action="/logup" method="post">
                                        <div class="form-group my-4">
                                            <label for="name">Name</label>
                                            <input type="text" class="form-control py-2 mt-2" id="name" name="name"
                                                placeholder="Enter your name">
                                        </div>

                                        <div class="form-group my-4">
                                            <label for="name">Phone Number</label>
                                            <input type="number" class="form-control py-2 mt-2" id="phoneNumber"
                                                name="phoneNumber" placeholder="Enter your phone number">
                                        </div>

                                        <div class="form-group my-4">
                                            <label for="email">Email address</label>
                                            <input type="email" class="form-control py-2 mt-2" id="email" name="email"
                                                placeholder="Enter your email">
                                        </div>
                                        <div class="form-group my-4">
                                            <label for="password">Password</label>
                                            <input type="password" class="form-control py-2 mt-2" id="password"
                                                name="password" placeholder="Enter your password">
                                        </div>

                                        <div class="text-center py-3">
                                            <button type="submit"
                                                class="btn text-white text-center submit-button px-5">Register</button>
                                        </div>

                                        <div class="text-center py-3">
                                            <button type="submit"
                                                class="btn text-white text-center submit-button px-5">Certificate</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

    {{> aboutus}}


    {{!-- For Certificate --}}
    <script src="https://unpkg.com/pdf-lib/dist/pdf-lib.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>